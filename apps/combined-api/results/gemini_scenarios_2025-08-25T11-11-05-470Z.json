      "name": "Successful Movie Search",
      "description": "Verify that searching for 'Coolie' returns relevant movie results, including 'Coolie No. 1' (if available).",
      "steps": [
        {
          "action": "navigate",
          "target": "https://in.bookmyshow.com/explore/home/bengaluru",
          "data": null,
          "description": "Navigate to BookMyShow Bengaluru homepage"
        },
        {
          "action": "type",
          "target": "input[type='search']",
          "data": "Coolie",
          "description": "Enter 'Coolie' in the search bar"
        },
        {
          "action": "submit",
          "target": "form[role='search']",
          "data": null,
          "description": "Submit the search"
        },
        {
          "action": "verify",
          "target": "div.movie-title:contains('Coolie No. 1') or div.movie-title:contains('Coolie')",
          "data": true,
          "description": "Verify that at least one result containing 'Coolie' or 'Coolie No. 1' is displayed"
        }
      ]
    },
